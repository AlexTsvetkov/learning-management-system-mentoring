{
  "info": {
    "name": "Learning Management System - CRUD API",
    "description": "Postman collection for CRUD endpoints of Students, Courses, CourseSettings, and Lessons.",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json",
    "_postman_id": "c3b2b000-1234-4567-890a-abcdef123456"
  },
  "item": [
    {
      "name": "Students",
      "item": [
        {"name": "Get All Students","request": {"method": "GET","url": "{{baseUrl}}/students"}},
        {"name": "Get Student By ID","request": {"method": "GET","url": "{{baseUrl}}/students/{{id}}"}},
        {"name": "Create Student","request": {"method": "POST","header": [{"key": "Content-Type","value": "application/json"}],"body": {"mode": "raw","raw": "{\n  \"firstName\": \"John\",\n  \"lastName\": \"Doe\",\n  \"email\": \"john.doe@example.com\",\n  \"dateOfBirth\": \"2000-01-01\",\n  \"coins\": 100\n}"},"url": "{{baseUrl}}/students"}},
        {"name": "Update Student","request": {"method": "PUT","header": [{"key": "Content-Type","value": "application/json"}],"body": {"mode": "raw","raw": "{\n  \"firstName\": \"Updated\",\n  \"lastName\": \"Name\",\n  \"email\": \"updated@example.com\",\n  \"dateOfBirth\": \"2000-01-01\",\n  \"coins\": 150\n}"},"url": "{{baseUrl}}/students/{{id}}"}},
        {"name": "Delete Student","request": {"method": "DELETE","url": "{{baseUrl}}/students/{{id}}"}}
      ]
    },
    {
      "name": "Courses",
      "item": [
        {"name": "Get All Courses","request": {"method": "GET","url": "{{baseUrl}}/courses"}},
        {"name": "Get Course By ID","request": {"method": "GET","url": "{{baseUrl}}/courses/{{id}}"}},
        {"name": "Create Course","request": {"method": "POST","header": [{"key": "Content-Type","value": "application/json"}],"body": {"mode": "raw","raw": "{\n  \"title\": \"Java Fundamentals\",\n  \"description\": \"Learn Java basics\",\n  \"price\": 199.99\n}"},"url": "{{baseUrl}}/courses"}},
        {"name": "Update Course","request": {"method": "PUT","header": [{"key": "Content-Type","value": "application/json"}],"body": {"mode": "raw","raw": "{\n  \"title\": \"Updated Course\",\n  \"description\": \"Updated description\",\n  \"price\": 249.99\n}"},"url": "{{baseUrl}}/courses/{{id}}"}},
        {"name": "Delete Course","request": {"method": "DELETE","url": "{{baseUrl}}/courses/{{id}}"}}
      ]
    },
    {
      "name": "Course Settings",
      "item": [
        {"name": "Get All Course Settings","request": {"method": "GET","url": "{{baseUrl}}/course-settings"}},
        {"name": "Get Course Settings By ID","request": {"method": "GET","url": "{{baseUrl}}/course-settings/{{id}}"}},
        {"name": "Create Course Settings","request": {"method": "POST","header": [{"key": "Content-Type","value": "application/json"}],"body": {"mode": "raw","raw": "{\n  \"startDate\": \"2025-01-01T09:00:00\",\n  \"endDate\": \"2025-06-01T17:00:00\",\n  \"isPublic\": true\n}"},"url": "{{baseUrl}}/course-settings"}},
        {"name": "Update Course Settings","request": {"method": "PUT","header": [{"key": "Content-Type","value": "application/json"}],"body": {"mode": "raw","raw": "{\n  \"startDate\": \"2025-02-01T09:00:00\",\n  \"endDate\": \"2025-07-01T17:00:00\",\n  \"isPublic\": false\n}"},"url": "{{baseUrl}}/course-settings/{{id}}"}},
        {"name": "Delete Course Settings","request": {"method": "DELETE","url": "{{baseUrl}}/course-settings/{{id}}"}}
      ]
    },
    {
      "name": "Lessons",
      "item": [
        {"name": "Get All Lessons","request": {"method": "GET","url": "{{baseUrl}}/lessons"}},
        {"name": "Get Lesson By ID","request": {"method": "GET","url": "{{baseUrl}}/lessons/{{id}}"}},
        {"name": "Create Lesson","request": {"method": "POST","header": [{"key": "Content-Type","value": "application/json"}],"body": {"mode": "raw","raw": "{\n  \"title\": \"Introduction to Java\",\n  \"duration\": 60\n}"},"url": "{{baseUrl}}/lessons"}},
        {"name": "Update Lesson","request": {"method": "PUT","header": [{"key": "Content-Type","value": "application/json"}],"body": {"mode": "raw","raw": "{\n  \"title\": \"Updated Lesson\",\n  \"duration\": 75\n}"},"url": "{{baseUrl}}/lessons/{{id}}"}},
        {"name": "Delete Lesson","request": {"method": "DELETE","url": "{{baseUrl}}/lessons/{{id}}"}}
      ]
    }
  ],
  "variable": [
    { "key": "baseUrl", "value": "http://localhost:8080/api" },
    { "key": "id", "value": "00000000-0000-0000-0000-000000000000" }
  ]
}